<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.AccountProfileFragment"
    android:orientation="vertical">

    <Button
        android:backgroundTint="@color/chinese_blue"
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginBottom="10sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/task_block_background">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/userNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="Username"
                        android:textSize="30sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/userEmailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="User email"
                        android:textSize="20sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/user"
                    android:layout_gravity="center"
                    android:paddingVertical="10sp"/>
            </LinearLayout>

            <TextView
                android:background="@drawable/notification_background"
                android:paddingHorizontal="10sp"
                android:paddingVertical="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There isn't any notification right now."
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginVertical="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/task_block_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Incorrect Answers"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/totalIncorrectAnsweredText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="10"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#C30F16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20sp"
                    android:layout_marginLeft="5sp"
                    android:background="@drawable/task_block_background">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Correct Answers"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/totalCorrectAnsweredText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="10"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#008000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginVertical="10sp"
                android:padding="20sp"
                android:background="@drawable/task_block_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Total Questions"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/totalQuestionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="10"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="20sp"
                android:background="@drawable/task_block_background"
                android:paddingHorizontal="10sp">
                <TextView
                    android:background="@drawable/notification_background"
                    android:paddingVertical="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summarized by AI"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"/>
                <TextView
                    android:id="@+id/aiSummaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Correctly Answered"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:backgroundTint="@color/chinese_blue"
                    android:id="@+id/shareButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textSize="26sp"
                    android:padding="10sp"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>